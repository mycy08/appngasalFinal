<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    tools:context="tercyduk.appngasal.Activity.EditProfile">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/inputCont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="150dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/edp.name.container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            style="@style/LoginSingup"
                            android:layout_marginTop="20dp"
                            android:hint="Name"
                            android:inputType="textPersonName"
                            android:id="@+id/edp.txt.name"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/edp.alamat.container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            style="@style/LoginSingup"
                            android:hint="Alamat"
                            android:id="@+id/edp.txt.alamat"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/edp.hp.container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            style="@style/LoginSingup"
                            android:hint="Handphone"
                            android:inputType="phone"
                            android:id="@+id/edp.txt.hp"/>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/inputCont"
            android:layout_marginBottom="-140dp"
            app:srcCompat="@mipmap/register" />

        <Button
            android:id="@+id/btnCreateAccount"
            style="@style/ButtonOrange"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_below="@+id/inputCont"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="15dp"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

    </RelativeLayout>
</FrameLayout>
